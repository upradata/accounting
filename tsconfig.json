{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "resolveJsonModule": true,
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "esnext"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "target": "esnext",
        "traceResolution": false,
        "outDir": "dist",
        "esModuleInterop": true,
    },
    "include": [
        "src",
        "src/**/*.json"
    ],
    "exclude": [
        "node_modules",
        "**/*.bak.ts"
    ]
}
