{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "allowJs": false,
        "resolveJsonModule": true,
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "ESNext"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "target": "ESNext",
        "traceResolution": false,
        "outDir": "dist",
        "esModuleInterop": true,
        "incremental": true,
        "baseUrl": ".",
        "paths": {
            "@util": [
                "src/util"
            ],
            "@import": [
                "src/import"
            ],
            "@edition": [
                "src/edition"
            ],
            "@metadata": [
                "src/metadata"
            ],
            "@accounting": [
                "src/accounting"
            ],
            "@root/*": [
                "src/*"
            ]
        }
    },
    "include": [
        "src",
        "src/**/*.json"
    ],
    "exclude": [
        "node_modules",
        "**/*.bak.ts"
    ]
}
